<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageButton
        android:id="@+id/pasteButton"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/paste"
        android:background="@null"
        android:contentDescription="@string/paste"
        android:scaleType="fitCenter"
        android:layout_marginEnd="5dp" />

    <TextView
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:text="@string/x"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:labelFor="@id/inputX" />

    <EditText
        android:id="@+id/inputX"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:inputType="number"
        android:maxLength="4"
        android:importantForAutofill="no"
        android:text="@string/default_x"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="5dp" />

    <TextView
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:text="@string/y"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:labelFor="@id/inputY" />

    <EditText
        android:id="@+id/inputY"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:inputType="number"
        android:maxLength="4"
        android:importantForAutofill="no"
        android:text="@string/default_y"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="5dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:text="@string/color"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:labelFor="@id/inputColor" />

    <EditText
        android:id="@+id/inputColor"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:inputType="text"
        android:maxLength="7"
        android:importantForAutofill="no"
        android:text="@string/default_color"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="5dp" />

    <ImageButton
        android:id="@+id/crossButton"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:src="@drawable/cross"
        android:background="@null"
        android:contentDescription="@string/cross"
        android:scaleType="fitCenter" />

</LinearLayout>