<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChromaClicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_charcoal</item>
        <item name="colorPrimaryVariant">@color/charcoal</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/snow</item>
        <item name="colorOnSecondary">@color/charcoal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:background">@color/charcoal</item>
    </style>

    <style name="SaveDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_charcoal</item>
    </style>

    <style name="PermissionsDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dark_charcoal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TutorialPage">
        <item name="android:background">@color/dark_charcoal</item>
    </style>

</resources>